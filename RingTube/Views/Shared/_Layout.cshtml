<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Home - Brand</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css">
    @Styles.Render("~/Content/assets/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Content/assets/fonts/fontawesome-all.min.css")
    @Styles.Render("~/Content/assets/fonts/simple-line-icons.min.css")
    @Styles.Render("~/Content/assets/css/styles.min.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-md" style="background: #000000;color: rgb(249,249,249);padding-bottom: 20px;">
        <div class="container-fluid">
            <button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-2" style="padding-right: -8px;background: #ffffff;"><span class="sr-only" style="width: 11px;height: -17px;">Toggle navigation</span><img src="~/Content/assets/img/hamburger-lines-menu-icon-hamburger-icon-png-512_512.png" style="width: 25px;height: 25px;"></button>
            <div><a class="navbar-brand navbar-brand-centered" href="#" style="height: 117px;width: 150px;padding-top: 0px;padding-bottom: 2px;margin-top: -45px;margin-right: 54px;"> <img style="max-height: 180px;height: 207px;width: 198px;filter: brightness(137%);" src="~/Content/assets/img/logo.png" height="120px" width="120px"></a></div>
            <div class="collapse navbar-collapse" id="navcol-2" style="height: 60px;">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index" style="color: #ffffff;">Home </a></li>
                    <li class="nav-item" style="color: #ffffff;"><a class="nav-link" href="/Products/Index" style="color: #ffffff;">Ringtones</a></li>
                </ul>
                @if (Context.User.Identity.IsAuthenticated)
                {
            <ul class="nav navbar-nav ml-auto">

                @if (Context.User.IsInRole("a"))
                {
                    <li class="nav-item"><a href="/AdminPanel/Index" class="nav-link" style="color: #ffffff;">Admin Panel</a></li>
                }
                <li class="nav-item"><a class="nav-link" href="/User/UserProfile" style="color: #ffffff;">@Context.User.Identity.Name</a></li>
                <li class="nav-item"><a class="nav-link" href="/User/UserProfile" style="color: #ffffff;">My Profile</a></li>
                <li class="nav-item" style="color: #ffffff;"><a class="nav-link" href="/Products/Fav" style="color: #ffffff;"> My Favorite List</a></li>
                <li class="nav-item" style="color: #ffffff;"><a class="nav-link" href="/Products/Cart" style="color: #ffffff;"> My Cart</a></li>

                <li class="nav-item"><a class="nav-link" href="/User/SignOut" style="color: #ffffff;">Sign Out</a></li>
                
            </ul>
                }
                else
                { <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link" href="/User/Index" style="color: #ffffff;">Login</a></li>
                        <li class="nav-item" style="color: #ffffff;"><a class="nav-link" href="/User/SignUp" style="color: #ffffff;">SignUp</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/Content/assets/js/jquery.min.js")
    @Scripts.Render("~/Content/assets/bootstrap/js/bootstrap.min.js")
    @Scripts.Render("~/Content/assets/js/script.min.js")
    @RenderSection("scripts", required: false)
    <footer class="page-footer dark">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <h5>Get started</h5>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Sign up</a></li>
                        <li><a href="#">Downloads</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>About us</h5>
                    <ul>
                        <li><a href="#">Company Information</a></li>
                        <li><a href="#">Contact us</a></li>
                        <li><a href="#">Reviews</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Support</h5>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Help desk</a></li>
                        <li><a href="#">Forums</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Legal</h5>
                    <ul>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="#">Terms of Use</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <p>© 2021 Copyright Text</p>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>

</body>
</html>
